{
	"root": true,
	"parserOptions": {
		"parser": "babel-eslint",
		"ecmaFeatures": {
			// 支持装饰器
			"legacyDecorators": true
		}
	},
	"env": {
		"node": true,
		"jquery": true
	},
	"extends": [
		"plugin:vue/essential",
		"eslint:recommended"
	],
	"rules": {
		"no-console": 0,
		"no-alert": 2,
		"no-debugger": 2,
		"keyword-spacing": 2,
		"no-unused-vars": 2,
		"comma-dangle": 2,
		"no-spaced-func": 2,
		"no-extra-semi": 2,
		"no-extra-parens": 2,
		"no-duplicate-case": 2,
		"no-dupe-args": 2,
		"no-const-assign": 2,
		"no-unused-expressions": 2,
		"no-unreachable": 2,
		"no-use-before-define": 2,
		"default-case": 2,
		"yoda": 2,
		"indent": [1, 2],
		"space-infix-ops": 1,
		"comma-spacing": 1,
		"brace-style": 1,
		"no-multiple-empty-lines": 1,
		"operator-linebreak": 1,
		"no-undef": 0
	}
}